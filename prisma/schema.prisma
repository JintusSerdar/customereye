// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  name    String?
  email   String?  @unique
  reports Report[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id          String   @id @default(cuid())
  title       String
  description String?
  companyName String
  industry   String
  rating     Float
  reviewCount Int
  summary    String
  tags       String   // JSON string for simplicity
  reportType String   // "Free" or "Premium"
  language   String
  isPaid     Boolean  @default(false)
  logo       String?  // File path or emoji
  reportData String?  // JSON string for detailed report data
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  files      FileStorage[] // Relation to file storage
}

// File storage model for reports and images
model FileStorage {
  id        String   @id @default(cuid())
  filename  String
  originalName String
  path      String
  type      String   // "report", "image", "pdf"
  size      Int
  mimeType  String
  createdAt DateTime @default(now())
  reportId  String?
  report    Report?  @relation(fields: [reportId], references: [id])
}
